# OffMeta BG - Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ================================
# DATABASE CONFIGURATION
# ================================
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_secure_database_password

# ================================
# APPLICATION
# ================================
APP_ENV=production
APP_DEBUG=false
APP_URL=https://yourdomain.com
APP_TIMEZONE=Europe/Sofia

# ================================
# SECURITY
# ================================
# Generate: openssl rand -base64 32
APP_KEY=generate_random_32_character_key_here
SESSION_LIFETIME=120
SECURE_COOKIES=true

# ================================
# EMAIL CONFIGURATION
# ================================
MAIL_DRIVER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="Your Site Name"

# ================================
# CLOUDFLARE (Optional)
# ================================
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_API_KEY=your_cloudflare_global_api_key
CLOUDFLARE_EMAIL=your_cloudflare_email@example.com
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id

# ================================
# OAUTH (Optional)
# ================================
OAUTH_GOOGLE_ENABLED=false
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=

OAUTH_FACEBOOK_ENABLED=false
OAUTH_FACEBOOK_CLIENT_ID=
OAUTH_FACEBOOK_CLIENT_SECRET=

# ================================
# BUSINESS SETTINGS
# ================================
CURRENCY=EUR
CURRENCY_SYMBOL=â‚¬
TAX_RATE=20
SHIPPING_COST=5
FREE_SHIPPING_THRESHOLD=50
