# OffMeta BG - Environment Configuration
# Copy this file to .env and configure your values
# NEVER commit the actual .env file to version control

# ================================
# DATABASE CONFIGURATION
# ================================
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=offmetabg_db
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Alternative: PostgreSQL connection URL (overrides individual settings)
# DATABASE_URL=postgresql://user:password@host:port/database

# ================================
# APPLICATION
# ================================
APP_ENV=production
APP_DEBUG=false
APP_URL=https://offmetabg.com
APP_TIMEZONE=Europe/Sofia

# ================================
# SECURITY
# ================================
# Generate a secure random string for encryption
APP_KEY=your_32_character_encryption_key_here
SESSION_LIFETIME=120
SECURE_COOKIES=true

# ================================
# EMAIL CONFIGURATION
# ================================
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password_here
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@offmetabg.com
MAIL_FROM_NAME="OffMeta BG"

# ================================
# CLOUDFLARE
# ================================
CLOUDFLARE_API_KEY=your_cloudflare_api_key_here
CLOUDFLARE_EMAIL=your_cloudflare_email@example.com
CLOUDFLARE_ZONE_ID=your_zone_id_here

# ================================
# API KEYS
# ================================
# Google Services
GOOGLE_ANALYTICS_ID=
GOOGLE_RECAPTCHA_SITE_KEY=
GOOGLE_RECAPTCHA_SECRET_KEY=

# Payment Gateways
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

PAYPAL_CLIENT_ID=
PAYPAL_SECRET=
PAYPAL_MODE=live

# Courier/Shipping API
COURIER_API_KEY=
COURIER_API_URL=https://api.courier.example.com

# ================================
# CACHE & PERFORMANCE
# ================================
CACHE_DRIVER=file
CACHE_LIFETIME=3600
ENABLE_OPCACHE=true

# Redis (if using)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=null
REDIS_DATABASE=0

# ================================
# FILE STORAGE
# ================================
STORAGE_DRIVER=local
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,svg,pdf,zip

# AWS S3 (if using cloud storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=

# ================================
# SOCIAL MEDIA
# ================================
FACEBOOK_URL=
INSTAGRAM_URL=
TWITTER_URL=
YOUTUBE_URL=
DISCORD_URL=
TIKTOK_URL=
TWITCH_URL=
KICK_URL=

# ================================
# OAUTH / SOCIAL LOGIN
# ================================
# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://offmetabg.com/auth/google/callback

# Facebook OAuth
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_REDIRECT_URI=https://offmetabg.com/auth/facebook/callback

# Instagram OAuth (uses Facebook App)
INSTAGRAM_CLIENT_ID=
INSTAGRAM_CLIENT_SECRET=
INSTAGRAM_REDIRECT_URI=https://offmetabg.com/auth/instagram/callback

# Discord OAuth
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_REDIRECT_URI=https://offmetabg.com/auth/discord/callback

# Twitch OAuth
TWITCH_CLIENT_ID=
TWITCH_CLIENT_SECRET=
TWITCH_REDIRECT_URI=https://offmetabg.com/auth/twitch/callback

# TikTok OAuth
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=
TIKTOK_REDIRECT_URI=https://offmetabg.com/auth/tiktok/callback

# Kick OAuth (if available)
KICK_CLIENT_ID=
KICK_CLIENT_SECRET=
KICK_REDIRECT_URI=https://offmetabg.com/auth/kick/callback

# ================================
# MONITORING & LOGGING
# ================================
LOG_CHANNEL=daily
LOG_LEVEL=error
SENTRY_DSN=

# ================================
# DEVELOPMENT ONLY
# ================================
# Enable detailed error messages (NEVER in production!)
# DISPLAY_ERRORS=false
# ERROR_REPORTING=E_ALL

# Local development database
# DB_HOST=localhost
# DB_NAME=offmetabg_local
